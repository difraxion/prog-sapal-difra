	.option-login#option-login
		a(href="#").oheader.db INICIAR SESIÓN
		div(class="form {LOGIN}")
			p
				label(for="sac_usuario") USUARIO:
				input(type="text", name="sac_usuario")#sac_usuario.txt.upper
				input(type="button", value="INICIAR SESIÓN").btn#btn_login
			p
				label(for="sac_psw") CONTRASEÑA:
				input(type="password", name="sac_psw")#sac_psw.txt
				span RECUPERAR TU CONTRASEÑA&nbsp;
				a(href="{DIR}sac/recuperarcontrasena") AQUÍ
			p#msjlogin
	.option-login#option-nusario
		a(href="#").oheader.db ¿USUARIO NUEVO... ? REGÍSTRATE AQUÍ
		div(class="form {NUEVO}")
			p
				label(for="nusuario") USUARIO:
				input(type="text", name="nusuario", maxlength="35")#nusuario.txt.requerido.upper
				a(href="{DIR}img/img-usuarios.jpg", target="_blank").help &nbsp;&nbsp;* EJEMPLO
			p
				label(for="contrasena") CONTRASEÑA:
				input(type="password", name="contrasena", maxlength="8")#contrasena.txt.requerido
			p
				label(for="cocontrasena") CONFIRMAR CONTRASEÑA:
				input(type="password", name="cocontrasena", maxlength="8")#cocontrasena.txt.requerido
			p
				label(for="correo") CORREO ELECTRÓNICO:
				input(type="text", name="correo", maxlength="50")#correo.txt.requerido
			p
				label(for="nombre") NOMBRE:
				input(type="text", name="nombre", maxlength="50")#nombre.txt.requerido.upper
			p
				label(for="apellidos") APELLIDOS:
				input(type="text", name="apellidos", maxlength="50")#apellidos.txt.requerido.upper
			p
				label(for="direccion") CALLE:
				input(type="text", name="direccion", maxlength="50")#direccion.txt.requerido.upper
			p
				label(for="domicilio") COLONIA:
				input(type="text", name="domicilio")#domicilio.txt.requerido.upper
			p
				label(for="ncuenta") NÚMERO DE CUENTA:
				input(type="text", name="ncuenta", maxlength="7")#ncuenta.txt.requerido.upper
				a(href="{DIR}img/img-cuenta.jpg", target="_blank").help &nbsp;&nbsp;* EJEMPLO
			p
				label(for="clave") CLAVE PERSONAL:
				input(type="text", name="nclave")#nclave.txt.requerido.upper
				a(href="{DIR}img/img-clave.jpg", target="_blank").help &nbsp;&nbsp;* EJEMPLO
			p
				label(for="pregunta") PREGUNTA:
				select.txt#pregunta.requerido.upper
					option(value="") Seleccione una pregunta
					{PREGUNTAS}
			p
				label(for="respuesta") RESPUESTA SECRETA:
				input(type="text", name="respuesta", maxlength="30")#respuesta.txt.requerido.upper
